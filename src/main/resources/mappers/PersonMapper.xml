<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.imldy.mriai.console.plugin.mapper.PersonMapper">

    <insert id="addPerson"
            keyProperty="id"
            useGeneratedKeys="true"
    >
        insert
        into person(name, deptId, phone, sex)
        values (#{name}, #{deptId}, #{phone}, #{sex})
    </insert>
    <select id="getPersonById"
            resultType="cn.imldy.mriai.console.plugin.bean.Person"
    >
        select *
        from person
        where id = #{id}
    </select>
    <select id="isExist"
            resultType="boolean">
        select count(*)
        from person
        where phone = #{phone}
          and name = #{name}
    </select>
    <select id="isExistById"
            resultType="java.lang.Boolean">
        select count(*)
        from person
        where id=#{id}
    </select>
</mapper>